cadvisor:
  image: google/cadvisor:v0.24.0
  ports:
    - "9090:9090"
  extra_hosts:
    - "influxsrv:collector"

  command: -storage_driver=influxdb -storage_driver_db=triplewave -storage_driver_host=influxsrv:8086

  volumes:
    - /:/rootfs:ro
    - /var/run:/var/run:rw
    - /sys:/sys:ro
    - /var/lib/docker/:/var/lib/docker:ro
